<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_load_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="loadPicture"/>
        <Button
            android:id="@+id/btn_scale_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scalePicture"/>

        <Button
            android:id="@+id/btn_option_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="optionsPicture"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <Button
           android:id="@+id/btn_left_scale_pic"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="moveLeft"/>
           <Button
               android:id="@+id/btn_right_scale_pic"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="moveRight"/>
       </LinearLayout>
    </LinearLayout>
</FrameLayout>
